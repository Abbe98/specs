{
   "$schema": "http://json-schema.org/schema#",
   "$id": "https://reconciliation-api.github.io/specs/schemas/reconciliation-query.json",
   "type": "object",
   "properties": {
      "query": {
         "type": "string"
      },
      "properties": {
         "type": "array",
         "items": {
            "type": "object",
            "properties": {
               "pid": {
                  "type": "string"
               },
               "v": {
                  "oneOf": [
                     {
                        "type": "string"
                     },
                     {
                        "type": "number"
                     },
                     {
                        "type": "boolean"
                     },
                     {
                        "type": "object",
                        "properties": {
                           "id": {
                              "type": "string"
                           },
                           "name": {
                              "type": "string"
                           }
                        },
                        "required": ["id"]
                     }
                  ]
               }
            },
            "required": ["pid", "v"]
         }
      },
      "limit": {
         "type": "number"
      },
      "type": {
         "oneOf": [
            {
               "type": "string"
            },
            {
               "type": "array",
               "items": {
                  "type": "string"
               }
            }
         ]
      },
      "type_strict": {
         "type": "string",
         "enum": ["any", "should", "all"]
      }
   },
   "required": ["query"]
}
